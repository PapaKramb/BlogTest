<h4>Детали поста:</h4>
<br>
<p>
	<%= @row['content'] %>
	<br/>
	<br/>
	Добавлено в: <%= @row['created_date'] %>
	<br/>
</p>
<br>
<h4>Комментарии:</h4>
<br>
<% @comments.each do |comment|%>
	<p>
		<%= comment['content'] %>
		<br>
		<br>
		<span style="font-size: 85%; color: #999"> Добавлено в: <%= comment['created_date'] %> </span>
	</p>
	<hr/>
<% end %>

<p>
	<form action="/details/<%= @row['id'] %>" method="POST">
	  <div class="form-group">
	    <textarea name="content" class="form-control" id="exampleFormControlTextarea1" rows="6" placeholder="Type comment text here"></textarea>
	  </div>
	  <button type="submit" class="btn btn-primary">Добавить комментарий</button>
	</form>
</p>